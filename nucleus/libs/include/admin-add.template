			<div class="indent">
				<%text(_ADD_PLACE_ON)%>
				<%date_time_picker%>
				<%ifblogsetting(ballowpast,0)%>
					<br />
					<%text(_ADD_NOPASTDATES)%>
				<%endif%>
			</div>
			<input name="actiontype" tabindex="<%tabindex(0,0)%>" value="adddraft" type="radio" id="act_draft" /><label for="act_draft"><%text(_ADD_ADDDRAFT)%></label> <%helplink(draft)%>
