				<div class="indent"><%text(_ITEM_ADDEDITTEMPLATE_FORMAT)%><%text(_ADD_PUBLIC_DATE_FORMAT_DESC)%></div>
				<div class="indent"><%text(_ADD_PUBLIC_TERM_DESC)%></div>
			</div>
<%else%>
		<div class="note"><%text(_FEATURE_WARN_UPGRADE_DESC)%></div>
		<input name="not_available_ipublic" type="hidden" value="1" />
<%endif%>
		</td>
	</tr>
	<tr>
		<td><%text(_SUBMIT)%></td>
