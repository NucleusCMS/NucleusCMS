		<part name="item"><![CDATA[<%parsedinclude(head.inc)%>

<!-- page header -->
<%parsedinclude(header.inc)%>

<!-- page content -->
<div id="container">
<div class="content">
<%item(classic/item)%>
</div>
<div class="content">
<div class="contenttitle">
<h2><%_(Comments)%></h2>
</div>
