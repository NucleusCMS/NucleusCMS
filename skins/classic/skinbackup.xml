		<part name="imagepopup"><![CDATA[<!DOCTYPE html>
<html>
<head>
<title><%imagetext%></title>
<style type="text/css">
img { border: none; }
body { margin: 0px; }
</style>
</head>

<!-- image content -->
<body onblur="window.close()">
<a href="javascript:window.close();"><%image%></a>
</body>

</html>]]></part>

		<part name="index"><![CDATA[<%parsedinclude(head.inc)%>

<!-- page header -->
<%parsedinclude(header.inc)%>

<!-- page content -->
